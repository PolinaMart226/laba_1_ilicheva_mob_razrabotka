<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Экран 1 "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Экран 1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <Button
                android:id="@+id/btnGoToSecAct"
                android:layout_width="225dp"
                android:layout_height="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="170dp"
                android:background="#A63535"
                android:backgroundTint="#A63535"
                android:backgroundTintMode="add"
                android:insetTop="4dp"
                android:insetRight="20dp"
                android:text="Кнопка 1 (Переход)"
                android:visibility="visible"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnGoToAct3"
                android:layout_width="225dp"
                android:layout_height="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="170dp"
                android:background="#A63535"
                android:backgroundTint="#A63535"
                android:backgroundTintMode="add"
                android:text="Кнопка 2" />

            <Button
                android:id="@+id/btnGoToAct4"
                android:layout_width="225dp"
                android:layout_height="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="170dp"
                android:background="#A63535"
                android:backgroundTint="#A63535"
                android:backgroundTintMode="add"
                android:text="Кнопка 3" />

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="225dp"
                android:layout_height="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="170dp"
                android:background="#A63535"
                android:backgroundTint="#A63535"
                android:backgroundTintMode="add"
                android:text="Выход" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>